<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="76dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="6dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="108dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/iv_movie_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:riv_corner_radius="4dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/default_fg_round_corner"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/ll_cinema_types"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="4dp">

            <TextView
                android:id="@+id/tv_cinema_type_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/movie_version_bg"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/common_font_white_e5"
                android:textSize="10dp"
                tools:text="IMAX 3D"/>

            <TextView
                android:id="@+id/tv_cinema_type_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:layout_marginBottom="3dp"
                android:background="@drawable/movie_version_bg"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/common_font_white_e5"
                android:textSize="10dp"
                tools:text="杜比影院"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_wish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/common_font_white"
            android:textSize="12dp"
            tools:text="220207 想看"/>

        <TextView
            android:id="@+id/tv_movie_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="6dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/common_font_yellow"
            android:textSize="14dp"
            tools:text="8.9 分" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_movie_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:maxLines="1"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/common_font_black"
        tools:text="羞羞的铁拳"/>

    <TextView
        android:id="@+id/tv_buy_ticket"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/movie_btn_buy_bg"
        android:gravity="center"
        android:textColor="@color/common_font_white"
        android:textSize="14dp"
        android:text="购票"/>

</LinearLayout>