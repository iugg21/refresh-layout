<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_round_white_5dp"
    android:paddingBottom="8dp"
    tools:layout_width="180dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:background="@drawable/home_recommend_image_bg"
            app:riv_corner_radius_top_left="5dp"
            app:riv_corner_radius_top_right="5dp"
            tools:layout_height="210dp"/>

        <ImageView
            android:id="@+id/iv_video"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_margin="6dp"
            android:layout_gravity="end|top"
            android:src="@drawable/ic_video_2"/>

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:layout_gravity="start|bottom"
            android:visibility="gone"
            android:textColor="@color/common_font_white"
            android:textSize="14dp"
            tools:text="推广"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="5dp"
            android:textSize="16dp"
            android:textColor="@color/common_font_black_333"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="少年时代的感情，往往开始的毫无来由，而结束更加猝不及防"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:gravity="center_vertical">

        <FrameLayout
            android:id="@+id/fl_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_avatar"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="1dp"
                android:scaleType="centerCrop"
                android:background="@drawable/ic_user_default"/>

            <ImageView
                android:id="@+id/iv_user_identification"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="bottom|end"
                tools:src="@drawable/ic_user_identification"/>

        </FrameLayout>

        <TextView
            android:id="@+id/tv_nick_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="12dp"
            tools:text="猫眼电影"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="5dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_up_count_gray"/>

            <TextView
                android:id="@+id/tv_approve_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="3dp"
                android:textSize="15dp"
                android:textColor="@color/common_font_black_333"
                tools:text="99"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
